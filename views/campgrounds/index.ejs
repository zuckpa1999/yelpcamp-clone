<% layout('/layouts/boilerplate') %>
<h1>All campgrouds </h1>
<div><a href="campgrounds/new">Add campground</a></div>

<% for(let campgroundd of campgrounds) {%>
<div class="card" mb-3>
    <div class="row">
        <div class="col-md-4">
            <img class="img-fluid" alt="" src="<%=campgroundd.image%>">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title"> <%= campgroundd.title%> </h5>
                <p class="card-text"> <%= campgroundd.description%> </p>
                <p class="card-text"> <small class="text-muted">
                        <%= campgroundd.location%>
                    </small> </p>
                <a href="campgrounds/<%= campgroundd._id%>" class="btn btn-primary">View <%= campgroundd.title%></a>
            </div>
        </div>
    </div>
</div>
<%}%>